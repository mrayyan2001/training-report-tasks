@model IEnumerable<ContactFormApp.Models.ContactMessage>

@{
    ViewData["Title"] = "All Contact Messages";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Contact Messages</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Submitted At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td>@message.Subject</td>
                    <td>@message.Message</td>
                    <td>@message.SubmittedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/Contact/" class="btn btn-primary">Back</a>
